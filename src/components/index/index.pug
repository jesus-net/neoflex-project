include ../input/input.pug
include ../checkbox/checkbox.pug
include ../button/button.pug
include ../footer/footer.pug
mixin index
    .wrapper
        main.auth
            .auth__container
                article.auth__poster 
                    img.poster(src=require("@assets/img/poster-home-copy.png"), alt="authorization poster")
                article.auth__block 
                    img.logo(src=require("@assets/img/logo-company.svg"), alt="logo company")
                    form.auth__form(action="") 
                        +input({type: 'email', label: 'e-email'})(class="block-1")
                        +input({type: 'password', label: 'password'})(class="block-2")
                        +checkbox(class="block-3")
                        +button({type: 'submit', placeholder: 'Login'})(class="block-4")
                        p.link Not a member? #[a(href="#") Request registration.]
        +footer()